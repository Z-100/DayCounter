<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:enterFadeDuration="150" android:exitFadeDuration="150">

    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/et_details_light" android:width="3dp"/>
            <solid android:color="@color/et_details_medium" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <stroke android:color="@color/et_details_medium" android:width="3dp"/>
            <solid android:color="@color/et_details_light" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>